<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scrollView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whiteIbory"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:background="@color/ibory"
            android:textColor="@color/gray"
            android:gravity="center"
            android:text="[ MENTORING ADD ]"
            android:textSize="30dp" />
        <!--<ImageButton-->
        <!--android:onClick="addClubBtn"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="fitXY"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@color/red"-->
        <!--android:src="@drawable/club_btn2"/>-->

    </LinearLayout>
    <!--<TextView-->
    <!--android:text="test_here is addWANTED_NOTICEpage"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteIbory"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="Mentoring Notice Num"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Mnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


        </LinearLayout>
        <TextView
            android:text="Mentoring Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!--<EditText-->
        <!--android:id="@+id/RArea"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="5dp"-->
        <!--android:background="@drawable/border_white"-->
        <!--android:padding="15dp"-->
        <!--android:text="Enter"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="20dp" />-->
        <Spinner
            android:background="@drawable/border_white"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></Spinner>

        <TextView
            android:text="Mentoring Notice Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_white"
            android:padding="5dp"
            android:text="Enter"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:text="Working Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_white"
            android:padding="5dp"
            android:text="Enter"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="ID/Writer(MentoringLeader)"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="writerID_test"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <TextView
            android:text="Mentoring Total Member Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MTotalNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_white"
            android:padding="5dp"
            android:text="Enter"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:text="Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_white"
            android:inputType="textMultiLine"
            android:lines="5"
            android:paddingBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:text="Enter"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/completeBtn"
        android:onClick="move_Back"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:background="@color/ibory"
        android:text="Complete"/>

</LinearLayout>
</ScrollView>

