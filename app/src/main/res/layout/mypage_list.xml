<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context="com.example.testremote.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:background="@color/red">
            <ImageButton
                android:background="@color/red"
                android:id="@+id/homeBtn"
                android:onClick="homeBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/home"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="[ My Activity ]"
                android:textSize="30dp" />

            <ToggleButton
                android:visibility="invisible"
                android:background="@drawable/toggle_selector"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textOn=""
                android:textOff=""

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:background="@color/red">

            <com.example.testremote.ZoomText

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:textColor="@android:color/white"

                android:gravity="left"
                android:text="Voice Control"
                android:textSize="30dp" />

            <ToggleButton
                android:visibility="visible"
                android:background="@drawable/toggle_selector"
                android:id="@+id/recog_start"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textOn=""
                android:textOff=""

                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">





        <LinearLayout
            android:nestedScrollingEnabled="true"
            android:id="@+id/lay_mypagelist"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mypagelist_club_txt"
                android:text="Club Activity"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/mypagelistclass_club"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </ListView>

            <TextView
                android:id="@+id/mypagelist_mentoring_txt"
                android:text="Mentoring Page"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView

                android:id="@+id/mypagelistclass_mentoring"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </ListView>

            <TextView
                android:id="@+id/mypagelist_lec_txt"
                android:text="Recruit Page"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/mypagelistclass_lec"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </ListView>

            <TextView
                android:id="@+id/mypagelist_wait_txt"
                android:text="Waitting Recruitng"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/mypagelistclass_wait"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </ListView>



        </LinearLayout>

        </ScrollView>
        <!--<Button-->
        <!--android:textColor="@android:color/white"-->
        <!--android:id="@+id/createbtn"-->
        <!--android:background="@color/red"-->
        <!--android:padding="10dp"-->
        <!--android:text="Create Club"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>




</LinearLayout>
