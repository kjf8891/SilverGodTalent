<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.testremote.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:background="@color/red">
            <ImageButton
                android:background="@color/red"
                android:id="@+id/homeBtn"
                android:onClick="homeBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/home"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="[ LOGIN ]"
                android:textSize="30dp" />
            <ImageButton
                android:background="@color/red"
                android:onClick="addRecruitNoticeBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/add"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:hint="PHONE NUMBER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eid" />

            <EditText
                android:hint="PASSWARD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/epw" />


            <Button
                android:layout_marginBottom="10dp"
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:text="Login"
                />
            <Button
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/signin"
                android:text="SignIn"
                />
            <LinearLayout
                android:paddingTop="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Receiving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/helping_switch"
                    android:textOn="Helping"
                    android:textOff="Receiving"
                    android:checked="false"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Helping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Helper Mobile Number"
                    android:id="@+id/help_mobno"
                    android:text="+821033463671"
                    android:layout_gravity="center"

                     />

                <Button
                    android:layout_weight="2"
                    android:background="@color/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:id="@+id/help_btn"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <EditText
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Authorization Number"
                    android:id="@+id/authorization_number"
                    android:layout_gravity="center"
                    android:phoneNumber="false"
                    android:inputType="number" />

                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:id="@+id/authorization_ok_btn"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

        </LinearLayout>

